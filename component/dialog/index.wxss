.Dialog_Box{
  width:100%;
  height:0;
  position: fixed;
  left:0;
  top:0;
  overflow: hidden;
  z-index: 4;
}
.Dialog_Box_float{ 
  width:100%;
  height:100vh;
  background:rgba(0, 0, 0, 0.55);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.5s;
}
.Dialog_Box .Dialog_{
  width:85%;
  background:#fff;
  border-radius: 4px; 
  transform:scale(0.8);
  transition: all 0.3s;
  overflow: hidden;
}
.Dialog_title{
  font-size:16px;
  line-height: 52px;
  font-weight: 600;
  text-align: center;
}
.Dialog_Btn{
  display: flex;
  align-items: center;
  border-top:1px solid #f2f2f2;
  margin-top:20px;
}
.Dialog_Btn > .Dialog_Btn_s{
  border:0;
  border-radius: 0;
  font-size:28rpx;
  color:#333;
  line-height: 50px;
  text-align: center;
  flex:1;
}
.Dialog_Btn>.Dialog_Btn_hover{
  background:#f2f2f2
}
.Dialog_Btn > .Dialog_Btn_s:last-child{
  border-left:1px solid #f2f2f2;
  color:#409EFF
}
.Dialog_content{
  padding:20px;
  box-sizing: border-box;
  text-align: center;
}
.Dialog_Box_show{
  height:100vh;
}
.Dialog_Box_float_show{
  opacity: 1;
}
.Dialog_Box .Dialog_show{
  transform: scale(1)
}