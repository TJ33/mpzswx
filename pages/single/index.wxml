<!-- pages/single/index.wxml -->
<view class="top">
  <view class="left">{{timecount}}</view>
  <view class="right">
    <view class="first">系统选择司机</view>
    <view class="second">倒计时结束后无应答将优先为您叫车</view>
  </view>
</view>
<view class="last">
  <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 1200rpx;" />
</view>