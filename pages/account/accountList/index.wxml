<swiper
 duration="{{duration}}"
 style="height:calc(100vh - 197rpx)"
 current="{{TopicTitleActive}}"
 bindchange="bindtransition"
>
	<block>
		<swiper-item>
			<scroll-view scroll-y="{{true}}" bindscrolltolower="bindscrolltolower1">
				<view
				 class="box"
				 wx:for="{{list1.rows}}"
				 wx:key=""
				 data-id="{{item.date}}"
				 bindtap="bindBill"
				>
					<view class="top">
						<view>{{item.date}}</view>
						<view class="none" wx:if="{{TopicTitleActive == 0}}">未对账</view>
						<view class="dz" wx:else>已对账</view>
					</view>
					<view class="bottom">
						<view class="content">
							<view class="contentBox">
								<view class="contentBox_1">总单数</view>
								<view class="contentBox_2">{{item.waybills.length}}单</view>
							</view>
						</view>
						<view class="content">
							<view class="contentBox">
								<view class="contentBox_1">线上支付</view>
								<view class="contentBox_2">
									{{item.total.aggregateQrCode + item.total.staticQrCode}}元
								</view>
							</view>
							<view class="contentBox">
								<view class="contentBox_3">现金收款</view>
								<view class="contentBox_2">{{item.total.cash}}元</view>
							</view>
						</view>
						<view class="content">
							<view class="contentBox">
								<view class="contentBox_1">总金额</view>
								<view class="contentBox_2">
									{{item.total.freightCost +item.total.premiumCost + item.total.cargoMoneyCost}}元
								</view>
							</view>
						</view>
					</view>
				</view>
				<miss wx:if="{{list1.rows.length == 0}}" />
			</scroll-view>
		</swiper-item>
		<swiper-item>
			<scroll-view scroll-y="{{true}}" bindscrolltolower="bindscrolltolower2">
				<view
				 class="box"
				 wx:for="{{list2.rows}}"
				 wx:key=""
				 data-id="{{item.date}}"
				 bindtap="bindBill"
				>
					<view class="top">
						<view>{{item.date}}</view>
						<view class="none" wx:if="{{TopicTitleActive == 0}}">未对账</view>
						<view class="dz" wx:else>已对账</view>
					</view>
					<view class="bottom">
						<view class="content">
							<view class="contentBox">
								<view class="contentBox_1">总单数</view>
								<view class="contentBox_2">{{item.waybills.length}}单</view>
							</view>
						</view>
						<view class="content">
							<view class="contentBox">
								<view class="contentBox_1">线上支付</view>
								<view class="contentBox_2">
									{{item.total.aggregateQrCode + item.total.staticQrCode}}元
								</view>
							</view>
							<view class="contentBox">
								<view class="contentBox_3">现金收款</view>
								<view class="contentBox_2">{{item.total.cash}}元</view>
							</view>
						</view>
						<view class="content">
							<view class="contentBox">
								<view class="contentBox_1">总金额</view>
								<view class="contentBox_2">
									{{item.total.freightCost +item.total.premiumCost + item.total.cargoMoneyCost}}元
								</view>
							</view>
						</view>
					</view>
				</view>
				<miss wx:if="{{list2.rows.length == 0}}" />
			</scroll-view>
		</swiper-item>
	</block>
</swiper>

