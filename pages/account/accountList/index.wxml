<view class="TopicTitle">
	<view
	 class="TopicTitleBox"
	 wx:key=""
	 wx:for="{{type}}"
	 data-index="{{index}}"
	 bindtap="{{TopicTitleActive == index ? '' : 'titleTab'}}"
	>
		<view class="{{TopicTitleActive == index ? 'TopicTitleActive' : ''}}">{{item}}</view>
	</view>
	<view class="TopicTitle-bottom" animation="{{animation}}" />
</view>
<view class="screen">
	<view class="left">
		<view
		 class="{{screenActive == index ? 'screen_active' : ''}}"
		 wx:for="{{screen}}"
		 wx:key=""
		 data-index="{{index}}"
		 bindtap="screenTab"
		>
			{{item}}
		</view>
	</view>
	<view class="center" wx:if="{{screenBs}}">日期：{{timeAt}} ~ {{timeEt}}</view>
	<view class="right" wx:if="{{TopicTitleActive == 0}}">共{{list1.rows.length}}天未对账</view>
	<view class="right" wx:else>共{{list2.rows.length}}天已对账</view>
</view>
<view class="box">
	<view class="ssBox {{screenBs?'BoxShow':''}}">
		<view class="select {{screenBs?'show':''}}">
			<view class="left">日期选择</view>
			<view class="right">
				<view
				 class="{{dataIndex == index?'on':'down'}}"
				 wx:for="{{dataList}}"
				 wx:key=""
				 data-index="{{index}}"
				 bindtap="bindData"
				>
					{{item}}
				</view>
			</view>
			<i class="iconfont icon-rili1 {{ssBoxShow?'bs':''}}" bindtap="bindssBox" />
		</view>
	</view>
	<view class="ssBox {{ssBoxShow?'BoxShow':''}}">
		<view class="dataBox {{ssBoxShow?'show':''}}">
			<picker
			 mode="date"
			 value="{{timeAt}}"
			 start=""
			 end="{{timeEt}}"
			 bindchange="bindtimeAt"
			>
				<view class="picker">{{timeAt}}</view>
			</picker>
			~
			<picker
			 mode="date"
			 value="{{timeEt}}"
			 start="{{timeAt}}"
			 end=""
			 bindchange="bindtimeEt"
			>
				<view class="picker">{{timeEt}}</view>
			</picker>
		</view>
	</view>
</view>
