<!-- pages/addressList/searchAddress/index.wxml -->
<view class="top">
		<view class="topType" bindtap="bindShopType">查询条件</view>
		<i class="iconfont icon-sousuo" />
		<input placeholder="搜索联系人姓名/手机号/店铺地址" placeholder-class="plaClass" bindblur="bindMerchant" />
</view>
<scroll-view scroll-y class="bottom">
		<view class="content" wx:for="{{listOther.rows}}" wx:key="" data-index="{{index}}" bindtap="bindShopLs">
				<view class="left">
						<view>{{item.merchantNickname}}</view>
						<view>
								{{item.location.region[0].name}}{{item.location.region[1].name}}{{item.location.region[2].name}}{{item.location.street}}
						</view>
						<view>{{item.contact.phone}}</view>
				</view>
				<view class="right">
						<i class="iconfont icon-tubiaozhizuomoban" />
				</view>
		</view>
		<view class="content" wx:for="{{list.list}}" wx:key="" data-index="{{index}}" bindtap="bindShop">
				<view class="left">
						<view>{{item.merchantNickname}}</view>
						<view>
								{{item.location.region[0].name}}{{item.location.region[1].name}}{{item.location.region[2].name}}{{item.location.street}}
						</view>
						<view>{{item.contact.phone}}</view>
				</view>
		</view>
		<miss wx:if="{{listOther.rows.length == 0 && list.list.length == 0}}" />
</scroll-view>