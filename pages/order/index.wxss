.all {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.all .TopicTitle {
  display: flex;
  flex-direction: row;
  padding: 30rpx 0;
  box-sizing: border-box;
  background: #fff;
  border-bottom: 1rpx solid #f5f5f5;
  border-top: 1rpx solid #f5f5f5;
  justify-content: center;
  position: relative;
}
.all .TopicTitleBox > image {
  width: 35rpx;
  height: 35rpx;
}
.all .TopicTitleBox_top {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  z-index: 999;
  background: #fff;
  animation: all 1s;
}
.all .TopicTitleBox:last-child {
  border-left: 2rpx solid #f5f5f5;
}
.all .TopicTitleBox .TopicTitleActive {
  color: #59ACFF;
  font-weight: 500;
  color: #59acff;
  line-height: 40rpx;
}
.all .TopicTitle view {
  font-size: 28rpx;
  color: #999999;
  flex: 1;
  text-align: center;
}
.all .TopicTitle_bottom {
  position: absolute;
  left: 22%;
  width: 40rpx;
  bottom: 0;
  height: 4rpx;
  background-color: #59ACFF;
}
.all .TopicTitle_bottom_on {
  left: 72%;
}
.all .map {
  display: flex;
  flex-direction: column;
  background: #fff;
  padding: 14rpx 50rpx;
  margin: 20rpx 30rpx 0 30rpx;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.05);
  border-radius: 2px;
}
.all .map .send {
  display: flex;
  justify-content: space-between;
}
.all .map .send .left {
  flex: 1;
  height: 100%;
  position: absolute;
  padding-top: 16rpx;
}
.all .map .send .left .monst {
  width: 10rpx;
  height: 10rpx;
  border: 6rpx solid #494b4d;
  border-radius: 50%;
}
.all .map .send .left .monst2 {
  width: 10rpx;
  height: 10rpx;
  border: 6rpx solid #4dbf6e;
  border-radius: 50%;
}
.all .map .send .left .line {
  border-left: 2rpx #979797 dashed;
  position: relative;
  right: -8rpx;
  height: 102rpx;
}
.all .map .send .right {
  display: flex;
  flex-direction: column;
  margin-left: 86rpx;
  font-size: 32rpx;
  color: #303233;
  line-height: 44rpx;
  flex: 1;
}
.all .map .send .right .shop {
  display: flex;
  align-items: center;
}
.all .map .send .right .shop .phone {
  font-size: 24rpx;
  line-height: 28rpx;
  padding-left: 20rpx;
}
.all .map .send .right .address {
  font-size: 20rpx;
  color: #919599;
  line-height: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 450rpx;
}
.all .map .send .right .other {
  font-size: 32rpx;
  color: #4dbf6e;
  line-height: 44rpx;
}
.all .map .send:first-child {
  padding-bottom: 52rpx;
}
.all .map .send:nth-last-child(1) {
  padding-bottom: 16rpx;
}
